{
  "name": "WhatLead",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "test": "vitest --workspace vitest.workspace.ts",
    "test:watch": "vitest --workspace vitest.workspace.ts",
    "test:ci": "vitest run --workspace vitest.workspace.ts --coverage",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @WhatLead/db db:push",
    "db:studio": "turbo -F @WhatLead/db db:studio",
    "db:generate": "turbo -F @WhatLead/db db:generate",
    "db:migrate": "turbo -F @WhatLead/db db:migrate"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@WhatLead/env": "workspace:*",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "@biomejs/biome": "^2.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "typescript": "catalog:",
    "@types/node": "^22.13.11",
    "@vitest/coverage-v8": "^3.2.4",
    "@WhatLead/config": "workspace:*",
    "jsdom": "^25.0.1",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "esbuild",
      "msw",
      "prisma",
      "sharp"
    ]
  },
  "packageManager": "pnpm@10.18.2"
}
