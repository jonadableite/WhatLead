model Lead {
  id         String   @id @default(uuid())
  tenantId   String
  campaignId String?
  name       String
  email      String
  phone      String
  stage      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  conversations Conversation[]

  @@index([tenantId, stage])
  @@map("lead")
}
