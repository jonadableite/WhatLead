model ExecutionControl {
  id         String   @id @default(uuid())
  scope      String
  scopeId    String
  status     String
  reason     String?
  pausedUntil DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([scope, scopeId])
  @@index([scope, scopeId])
  @@map("execution_control")
}

