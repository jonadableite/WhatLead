// =============================================================================
// REPUTATION MODELS - Instance Reputation System (DDD)
// =============================================================================

model InstanceReputation {
  instanceId             String    @id
  score                  Int
  temperatureLevel       String
  trend                  String
  lastHumanInteractionAt DateTime?
  lastEvaluatedAt        DateTime
  cooldownCount          Int       @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("instance_reputation")
}

model ReputationSignal {
  id         String   @id @default(uuid())
  instanceId String
  occurredAt DateTime
  type       String
  severity   String   @default("LOW")
  source     String   @default("WEBHOOK")
  context    Json?
  messageId  String?
  remoteJid  String?
  isGroup    Boolean  @default(false)
  latencyMs  Int?

  @@index([instanceId, occurredAt])
  @@index([instanceId, type, occurredAt])
  @@map("reputation_signal")
}
