model Instance {
  id               String   @id @default(uuid())
  tenantId          String
  displayName       String
  phoneNumber       String
  purpose           String
  engine            String
  lifecycleStatus   String
  connectionStatus  String
  profileName       String?
  profilePicUrl     String?
  profileLastSyncAt DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  lastConnectedAt   DateTime?

  @@index([tenantId])
  @@map("instance")
}

